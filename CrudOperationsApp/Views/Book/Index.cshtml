@{
    ViewData["Title"] = "Book Listing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Books</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <div class="btn-group">
                        <input type="text" class="form-field" id="Search" name="Search" placeholder="Enter book name">
                        <button type="button" class="btn btn-info">
                            <i class="fa fa-search" aria-hidden="true"> Search</i>
                        </button>
                        <button type="button" class="btn btn-warning">
                            <i class="fa fa-undo" aria-hidden="true"> Reset</i>
                        </button>
                        <button type="button" class="btn btn-danger">
                            <i class="fa fa-plus" aria-hidden="true"> Add </i>
                        </button>
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Last</th>
                        <th scope="col">Handle</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>mdo</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Jacob</td>
                        <td>Thornton</td>
                        <td>fat</td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Larry</td>
                        <td>the Bird</td>
                        <td>twitter</td>
                    </tr>
                </tbody>
            </table>
        </div>

    </section>
